        <result column="compliments" property="compliments" />
        <result column="date" property="date" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, type, state, image_url, title, user_id, compliments, date
    </sql>

</mapper>
